<div class="index-box">

	<div id="error">
		<% if @book.errors.any? %>
			<%= @book.errors.count %>error prohibited this obj from being saved:
			<% @book.errors.full_messages.each do |message| %>
				<%= message %>
			<% end %>
		<% end %>
	</div>


	<h2>New Book</h2>
		<%= form_for(@book) do |f| %>
			
			<label>Title</label>
			<%= f.text_field :title %>

			<label>Opinion</label>
			<%= f.text_area :body %>

			<%= f.submit "Create Book" %>

		<% end %>

	<h2>Books</h2>
	<table>
		<thead>
		<tr>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>


				<tb>
					<%= link_to book_path(book.id) do %>
					<%= book.title %>
					<% end %>
				</tb>
				<tb>
					<%= link_to book_path(book.id) do %>
					<%= book.body %>
					<% end %>
				</tb>
			<% end %>
		</tbody>
	</table>
</div>