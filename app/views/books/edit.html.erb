<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
	<div class="field">
		<%= f.label :title, "Title" %>
		<%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :body, "Opinion" %>
		<%= f.text_area :body %>
	</div>
	<div><%= f.submit "Update Book"%></div>
<% end %>

